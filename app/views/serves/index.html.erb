<p id="notice"><%= notice %></p>

<h1>Serves</h1>

<hr>

<%= bootstrap_form_tag url: '/serves', method: :get, layout: :inline do |f| %>
  <h4>Input Month</h4>
  <%= f.text_field :input_date, hide_label: true, placeholder: '2017-11' %>
  <%= f.submit "Show Report" %>
<% end %>


<table id="table" 
       data-toggle="table"
       data-search="false"
       data-pagination="true"
       data-pagination-loop ="false"
       >
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Serve Count</th>
    </tr>
  </thead>
  <tbody>

    <% @serves.each do |s| %>
    <tr>
      <td><%= Member.fullname(s[0]) %></td>
      <td><%= s[1] %></td>
    </tr>
    <% end %>

  </tbody>
<table>